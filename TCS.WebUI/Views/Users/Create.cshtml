@model TCS.EF.Entidades.User

@{
    ViewData["Title"] = SharedLocalizer["users"].ToString();
    ViewData["PageName"] = "users_index";
    ViewData["Heading"] = "<i class='subheader-icon fal fa-chart-area'></i> " + SharedLocalizer["users"].ToString();
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">@SharedLocalizer["username"]</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">@SharedLocalizer["firstname"]</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">@SharedLocalizer["lastname"]</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">@SharedLocalizer["email"]</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneLine" class="control-label">@SharedLocalizer["phoneline"]</label>
                <input asp-for="PhoneLine" class="form-control" />
                <span asp-validation-for="PhoneLine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label">@SharedLocalizer["department"]</label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Language" class="control-label">@SharedLocalizer["language"]</label>
                <input asp-for="Language" class="form-control" />
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Culture" class="control-label">@SharedLocalizer["culture"]</label>
                <input asp-for="Culture" class="form-control" />
                <span asp-validation-for="Culture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label">@SharedLocalizer["photo"]</label>
                <input asp-for="Photo" class="form-control" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeavingSummary" class="control-label">@SharedLocalizer["weavingsummary"]</label>
                <input asp-for="WeavingSummary" class="form-control" />
                <span asp-validation-for="WeavingSummary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary mb-3">@SharedLocalizer["save"]</button>
                <a asp-action="Index" class="btn btn-primary mb-3">
                    @SharedLocalizer["goback"]
                </a>
            </div>
        </form>
    </div>
</div>

@section ScriptsBlock {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
