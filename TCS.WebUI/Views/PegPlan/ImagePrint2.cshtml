@using System.IO
@model TCS.EF.Entidades.PegPlan
@{
    Layout = "Layouts/_LayoutPDF";
    ViewData["Title"] = Model.Code;
    ViewData["wwwrootpath"] = Model.wwwrootpath;

}
<body>
    <div class="container-header">
        <table style="border-collapse: collapse; width: 100%; height: 100px;" border="1">
            <tbody>
                <tr style="height: 60px;">
                    <td class="td-inicio"><img style="height:80px; padding-top:10px" src="~/img/xvlogosmall.png"></td>
                    <td class="td-center">
                        <div>Crossville Fabric Chile S.A.</div>
                        <div>Diseño PegPlan y Draft.</div>
                    </td>
                    <td class="td-fin">
                        @*<div class="div-header-details">Código : @Model.Code</div>*@
                        <div class="div-header-details">Revisión: 1</div>
                        <div class="div-header-details">Fecha de Emisión: @DateTime.Now.ToShortDateString()</div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div style="height:90%">
        @await Component.InvokeAsync("DesignDraw2", new { cols = Model.Shafts, rows = Model.Ends, data = Model.DraftPlan, repeats = Model.Repeats , draftId = Model.DraftId})
    </div>
</body>

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        height: 1235px;
    }

    .container-header {
        margin-bottom: 1em;
        height: 10%;
    }

    .td-inicio {
        width: 5%;
        height: 60px;
        text-align: center;
        font-size: 3em;
        padding-left: 0.35em;
    }

    .td-center {
        width: 75%;
        height: 60px;
        text-align: center;
    }

        .td-center div:nth-child(1) {
            font-size: 1em;
        }

        .td-center div:nth-child(2) {
            font-size: 3em;
        }

    .td-fin {
        width: 20%;
        height: 60px;
        text-align: center;
        font-size: 1.3em;
        padding: 0px;
    }

    .div-header-details {
        border: 1px solid black;
        border-top: 0px;
        border-right: 0px;
        border-left: 0px;
        height: 33.5%;
        text-align: left;
        padding-left: 1em;
        padding-top: 0.2em;
    }

        .div-header-details:nth-child(3) {
            border-bottom: 0px
        }
</style>
