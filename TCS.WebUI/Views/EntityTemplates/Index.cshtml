@model IEnumerable<DEVTOOLS.EF.Entidades.EntityTemplate>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EntityTemplateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntityTemplateObservations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntityTemplateSourceCodeType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntityTemplateContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EntityTemplateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntityTemplateObservations)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntityTemplateSourceCodeType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntityTemplateContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Entity.EntityName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EntityTemplateId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EntityTemplateId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EntityTemplateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
