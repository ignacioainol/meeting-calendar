@model TCS.EF.Entidades.UserPermission

@{
    ViewData["Title"] = SharedLocalizer["permissionassignment"].ToString();
    ViewData["PageName"] = "assignpermissions_index";
    ViewData["Heading"] = "<i class='subheader-icon fal fa-chart-area'></i> "+ SharedLocalizer["permissionassignment"].ToString();
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">@SharedLocalizer["user"]</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PermissionId" class="control-label">@SharedLocalizer["permission"]</label>
                <select asp-for="PermissionId" class="form-control" asp-items="ViewBag.PermissionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ModuleId" class="control-label">@SharedLocalizer["module"]</label>
                <select asp-for="ModuleId" class="form-control" asp-items="ViewBag.ModuleId"></select>
            </div>
            <div style="height : 40px;">
                <h3 class="validationSummary">
                    @if (Context.Request.Method == "POST")
                    {
                        @SharedLocalizer[ViewBag.userPermissionRep]
                        
                    }
                </h3>
            </div>
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary mb-3">@SharedLocalizer["save"]</button>
                <a asp-action="Index" class="btn btn-primary mb-3">
                    @SharedLocalizer["goback"]
                </a>
            </div>
        </form>
    </div>
</div>

@section ScriptsBlock {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script type="text/javascript">
    setTimeout(function () { $('.validationSummary').fadeOut(); },3000);
</script>
}
