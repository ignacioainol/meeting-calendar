@model TCS.EF.Entidades.Worker

@{
    ViewData["Title"] = SharedLocalizer["worker"].ToString();
    ViewData["PageName"] = "workers_index";
    ViewData["Heading"] = "<i class='subheader-icon fal fa-chart-area'></i> " + SharedLocalizer["worker"].ToString();
}
<h3>@SharedLocalizer["delete"] @SharedLocalizer["worker"]</h3>
<div>
    <br>
    <dl class="row" style="font-size :20px">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkerGroupId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkerGroupId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PositionId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PositionId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ficha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ficha)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="WorkerId" />
        <div>
            <button type="submit" value="Delete" class="btn btn-primary mb-3">Eliminar</button>
            <a asp-action="Index" class="btn btn-primary mb-3">
                @SharedLocalizer["goback"]
            </a>
        </div>
    </form>
</div>
